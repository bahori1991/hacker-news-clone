{
  "name": "hacker-news-clone",
  "packageManager": "bun@1.3.3",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "biome:check": "biome check .",
    "biome:format": "biome check --write .",
    "db:push": "turbo -F @packages/db db:push",
    "db:studio": "turbo -F @packages/db db:studio",
    "db:generate": "turbo -F @packages/db db:generate",
    "db:migrate": "turbo -F @packages/db db:migrate"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "^1.3.5",
    "turbo": "^2.7.2"
  }
}
